<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="REGISTER"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/registerBtn"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:layout_marginEnd="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/username"
        android:hint="Username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/confirmPass"
        android:hint="Confirm Password"
        android:layout_below="@+id/passwordLogin"
        android:layout_alignStart="@+id/passwordLogin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/passwordLogin"
        android:hint="Password"
        android:layout_below="@+id/username"
        android:layout_alignStart="@+id/username" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/confirmPass"
        android:layout_alignEnd="@+id/phone"
        android:layout_marginTop="17dp"
        android:id="@+id/job"
        android:hint="Job" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/phone"
        android:hint="Phone"
        android:layout_below="@+id/job"
        android:layout_alignStart="@+id/confirmPass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/adress"
        android:hint="Adress"
        android:layout_below="@+id/phone"
        android:layout_alignStart="@+id/phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="17dp"
        android:id="@+id/email"
        android:hint="Email"
        android:layout_below="@+id/adress"
        android:layout_alignStart="@+id/adress" />
</RelativeLayout>