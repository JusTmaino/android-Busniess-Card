<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Generate My QRCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/generateQRCod"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/scanQRcode"
        android:layout_alignLeft="@+id/scanQRcode" />

    <Button
        android:text="Import Contacts"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/importContacts"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Scan QRCode"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/scanQRcode"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/importContacts"
        android:layout_alignLeft="@+id/importContacts" />

    <Button
        android:text="Edit My Card"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editMycard"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/generateQRCod"
        android:layout_alignStart="@+id/generateQRCod" />

    <Button
        android:text="show cards"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/showCards"
        android:background="@color/cast_libraries_material_featurehighlight_outer_highlight_default_color"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/editMycard"
        android:layout_alignStart="@+id/editMycard" />

</RelativeLayout>